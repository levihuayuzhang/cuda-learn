{
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [
                "all"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "problemMatcher": [
                "$nvcc"
            ],
            "detail": "CMake clean & rebuild"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: nvcc build active file",
            "command": "/usr/local/cuda/bin/nvcc",
            "args": [
                "-g",
                "-G",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}