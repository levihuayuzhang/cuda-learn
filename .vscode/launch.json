{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CUDA-CMake:Launch",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "initCommands": ["-enable-pretty-printing"],
            "debuggerPath": "/usr/local/cuda/bin/cuda-gdb",
            "preLaunchTask": "CMake: clean rebuild"
        }
    ]
}